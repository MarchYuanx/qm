bgc = #f47d31
bgc2 = ghostwhite
bgc3 = #231212
bgc4 = green


*
    margin 0
    padding 0
    
body
    background-color bgc2
    font-family sans-serif
    margin 0 auto
    min-width 900px 

header
    background-color bgc
    display block
    color #fff
    text-align center
    h2 
        margin 0

h1 
    font-size 72px
    margin 0

h2 
    font-size 24px
    margin 0
    text-align center
    color bgc2

nav 
    display block
    a 
        display block
        border-bottom 3px solid #ffffff
        padding 10px
        text-decoration none 
        font-weight bold
        margin 5px
        &:hover
            color white


         
    