<!-- 下拉加载更多交给scroll-view 功能组件瀑布流需要2列 -->
<!--隐藏view得出图片height-->
<view style="display:none">
    <image wx:for="{{images}}" wx:key="index" id="{{item.id}}" src="{{item.pic}}" 
    bindload="onImageLoad"></image>
</view>


<scroll-view scroll-y="true" style="height:{{scrollH}}px" bindscrolltolower="loadImages">
    <view style="width:100%">
        <view class="img_item">
            <view wx:for="{{col1}}" wx:key="index">
                <image src="{{item.pic}}" style="width:100%;height:{{item.height}}px"/>
            </view>
        </view>

        <view class="img_item">
            <view wx:for="{{col2}}" wx:key="index">
                <image src="{{item.pic}}" style="width:100%;height:{{item.height}}px"/>
            </view>
        </view>
    </view>
</scroll-view>







